
{.section item}

  <!--WRAPPER-->
  <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">

    <!-- COVER IMAGE -->
    {.main-image?}
      <a href="{fullUrl}" class="cover-image content-fill">
        <img {@|image-meta} />
      </a>
    {.end}

    <header class="post-header container">

      <div class="post-header--content">
        <!--POST TILE-->
        <h1 class="post-title" data-content-field="title">
          <span>
            {.passthrough?}
              <a href="{sourceUrl}" target="_blank">{title}</a>
            {.or}
              {title}
            {.end}
          </span>
        </h1>

        <!--CATEGORIES-->
        {@|apply categories.block}

        <!--EXCERPT-->
        {.if excerpt}
          <div class="lead">{excerpt}</div>
        {.end}
      </div>

      <hr class="post-separator">

    </header>

    <div class="container">

      <!--MAIN CONTENT-->
      {body}

    </div>

    <footer class="container">

      <!--BLOG INJECTION-->
      {postItemInjectCode}

      <!--TAGS-->
      {.repeated section tags}
        <a class="tag" href="{collection.fullUrl}?tag={@|url-encode}">{@}</a>{.alternates with},
      {.end}

      <!--SHARE AND LIKE-->
      {@|like-button}
      {@|social-button}


      <!--LOCATION-->
      {.section location}
        <div class="location">
          <div class="location-map" data-controller="MapViewer" data-loc-name="{addressTitle}" data-loc-lng="{markerLng}" data-loc-lat="{markerLat}" data-loc-zoom="{mapZoom}" data-loc-popup=".location-info"></div>
          
          <div class="location-info">
            {.if addressTitle}<p><strong>{addressTitle}</strong></p>{.end}
            
            <p>
              {addressLine1}
              {.if addressLine2}<br>{addressLine2}{.end}
              {.if addressCountry}<br>{addressCountry}{.end}
            </p>

            <p>
              <a href="https://www.google.com/maps/search/?api=1&query={addressTitle|url-encode}+{addressLine1|url-encode}+{addressLine2|url-encode}+{addressCountry|url-encode}">Show on Google Maps</a>
            </p>
          </div>
        </div>
      {.end}

      <!--COMMENTS-->
      {@|comments}

    </footer>

  </article>

{.end}


<!--PAGINATION-->
{.section pagination}
  <nav class="blog-item-pagination">

    <!--NEWER PAGE-->
    {.section prevItem}
      <a href="{fullUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}

    <!--OLDER PAGE-->
    {.section nextItem}
      <a href="{fullUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}
